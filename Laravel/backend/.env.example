# ============================================================
# GATEWAY DE PAGAMENTOS - VARIAVEIS DE AMBIENTE
# Copie este arquivo para .env e preencha os valores reais.
# NUNCA commite o arquivo .env com valores reais!
# ============================================================

APP_NAME="Gateway de Pagamentos"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://seu-dominio.com.br
APP_TIMEZONE=America/Sao_Paulo
APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=pt_BR

# ============================================================
# SEGURANCA
# ============================================================
BCRYPT_ROUNDS=12

# ============================================================
# LOGS (em producao: stack ou daily - NUNCA single)
# ============================================================
LOG_CHANNEL=daily
LOG_LEVEL=error
LOG_DEPRECATIONS_CHANNEL=null

# ============================================================
# BANCO DE DADOS POSTGRESQL EXTERNO
# ============================================================
DB_CONNECTION=pgsql
DB_HOST=SEU_HOST_POSTGRESQL
DB_PORT=5432
DB_DATABASE=gateway
DB_USERNAME=gateway_user
DB_PASSWORD=SENHA_FORTE_AQUI
DB_SSLMODE=require

# ============================================================
# REDIS
# ============================================================
REDIS_CLIENT=predis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=SENHA_REDIS_FORTE_AQUI
REDIS_DB=0
REDIS_CACHE_DB=1

# ============================================================
# SESSAO E CACHE
# ============================================================
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=strict
CACHE_STORE=redis
QUEUE_CONNECTION=redis
BROADCAST_CONNECTION=redis

# ============================================================
# CORS - DOMINIOS PERMITIDOS (separados por virgula)
# ============================================================
CORS_ALLOWED_ORIGINS=https://app.seu-dominio.com.br
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With,Accept
CORS_ALLOW_CREDENTIALS=false
CORS_MAX_AGE=86400

# ============================================================
# FILAMENT ADMIN
# ============================================================
FILAMENT_AUTH_GUARD=web
ADMIN_URL_PREFIX=admin

# ============================================================
# HORIZON
# ============================================================
HORIZON_PREFIX=gateway_horizon:
HORIZON_BALANCE_STRATEGY=auto
HORIZON_MAX_PROCESSES=20
HORIZON_MIN_PROCESSES=1

# ============================================================
# OCTANE (Swoole)
# ============================================================
OCTANE_SERVER=swoole
OCTANE_HOST=0.0.0.0
OCTANE_PORT=8000
OCTANE_WORKERS=auto
OCTANE_TASK_WORKERS=auto
OCTANE_MAX_REQUESTS=500

# ============================================================
# TELESCOPE (apenas dev/staging - false em producao)
# ============================================================
TELESCOPE_ENABLED=false

# ============================================================
# ACQUIRENTE - PAGPIX
# ============================================================
PAGPIX_URL=
PAGPIX_KEY=
PAGPIX_ACTIVE=false

# ============================================================
# ACQUIRENTE - RAPDYN
# ============================================================
RAPDYN_URL=
RAPDYN_KEY=
RAPDYN_ACTIVE=false

# ============================================================
# ACQUIRENTE - WITETEC
# ============================================================
WITETEC_URL=
WITETEC_SECRET_KEY=
WITETEC_MERCHANT_EMAIL=
WITETEC_MERCHANT_PASSWORD=
WITETEC_ACTIVE=false

# ============================================================
# ACQUIRENTE - STRIKE
# ============================================================
STRIKE_URL=
STRIKE_PUBLIC_KEY=
STRIKE_SECRET_KEY=
STRIKE_ACTIVE=false

# ============================================================
# ACQUIRENTE - VERSELL PAY
# ============================================================
VERSELL_URL=
VERSELL_CLIENT_ID=
VERSELL_SECRET=
VERSELL_ACTIVE=false

# ============================================================
# ACQUIRENTE - BSPAY
# ============================================================
BSPAY_URL=
BSPAY_CLIENT_ID=
BSPAY_CLIENT_SECRET=
BSPAY_ACTIVE=false

# ============================================================
# WEBHOOK SECRETS (para validacao de assinatura HMAC)
# ============================================================
PAGPIX_WEBHOOK_SECRET=
RAPDYN_WEBHOOK_SECRET=
WITETEC_WEBHOOK_SECRET=
STRIKE_WEBHOOK_SECRET=
VERSELL_WEBHOOK_SECRET=
BSPAY_WEBHOOK_SECRET=

# ============================================================
# GATEWAY CONFIG
# ============================================================
GATEWAY_NAME="Gateway de Pagamentos"
GATEWAY_DEFAULT_ACQUIRER=PAGPIX
GATEWAY_ANTI_FRAUD_MIN=0

# ============================================================
# MAIL (para notificacoes do sistema)
# ============================================================
MAIL_MAILER=smtp
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@seu-dominio.com.br
MAIL_FROM_NAME="${APP_NAME}"
